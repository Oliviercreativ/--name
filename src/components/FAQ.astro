<script is:inline>
    // Utiliser is:inline pour s'assurer que le script est inclus directement dans la page
    document.addEventListener('DOMContentLoaded', function() {
        // Ajouter des √©couteurs d'√©v√©nements √† tous les boutons FAQ
        document.querySelectorAll('.faq-trigger').forEach((button) => {
            button.addEventListener('click', function() {
                const faqId = this.getAttribute('data-faq-id');
                if (faqId) {
                    // Trouver le contenu et l'ic√¥ne directement √† partir du bouton cliqu√©
                    const container = this.closest('.faq-item');
                    if (!container) return;
                    
                    const content = container.querySelector('.faq-content');
                    const icon = this.querySelector('.faq-icon');
                    
                    if (!content || !icon) return;
                    
                    // Fermer toutes les autres FAQ
                    document.querySelectorAll('.faq-content').forEach(faq => {
                        if (faq !== content) {
                            faq.classList.remove('show');
                            faq.classList.add('hidden');
                        }
                    });
                    
                    document.querySelectorAll('.faq-icon').forEach(faqIcon => {
                        if (faqIcon !== icon) {
                            faqIcon.style.transform = 'rotate(0deg)';
                        }
                    });
                    
                    // Basculer la FAQ actuelle
                    if (content.classList.contains('hidden')) {
                        content.classList.remove('hidden');
                        content.classList.add('show');
                        icon.style.transform = 'rotate(180deg)';
                    } else {
                        content.classList.remove('show');
                        content.classList.add('hidden');
                        icon.style.transform = 'rotate(0deg)';
                    }
                }
            });
        });
    });

    // RDV booking function
    function bookMeeting() {
