<style>
  .gradient-text {
    background: linear-gradient(135deg, #f97316, #ea580c);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Éléments décoratifs animés */
  .transform-element {
    position: absolute;
    border-radius: 50%;
    background: linear-gradient(45deg, #f97316, #ea580c);
    animation: transformFloat 8s ease-in-out infinite;
  }

  .element-1 {
    width: 100px;
    height: 100px;
    top: 10%;
    left: 5%;
    animation-delay: 0s;
  }

  .element-2 {
    width: 60px;
    height: 60px;
    top: 70%;
    right: 10%;
    animation-delay: 3s;
  }

  .element-3 {
    width: 80px;
    height: 80px;
    bottom: 10%;
    left: 20%;
    animation-delay: 6s;
  }

  @keyframes transformFloat {
    0%,
    100% {
      transform: translateY(0) scale(1) rotate(0deg);
    }
    33% {
      transform: translateY(-20px) scale(1.1) rotate(120deg);
    }
    66% {
      transform: translateY(10px) scale(0.9) rotate(240deg);
    }
  }

  /* Animation de la flèche */
  .transform-arrow {
    animation: arrowPulse 2s ease-in-out infinite;
  }

  @keyframes arrowPulse {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
  }

  /* Animations des cartes */
  .before-card,
  .after-card {
    animation: slideInCard 0.8s ease-out;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .after-card {
    animation-delay: 0.3s;
    animation-fill-mode: both;
  }

  .before-card:hover,
  .after-card:hover {
    transform: translateY(-8px);
  }

  @keyframes slideInCard {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Animations des items */
  .problem-item,
  .solution-item {
    animation: fadeInItem 0.6s ease-out;
    animation-fill-mode: both;
    transition: transform 0.2s ease;
  }

  .problem-item:hover,
  .solution-item:hover {
    transform: translateX(5px);
  }

  .problem-item:nth-child(1) {
    animation-delay: 0.1s;
  }
  .problem-item:nth-child(2) {
    animation-delay: 0.2s;
  }
  .problem-item:nth-child(3) {
    animation-delay: 0.3s;
  }
  .problem-item:nth-child(4) {
    animation-delay: 0.4s;
  }

  .solution-item:nth-child(1) {
    animation-delay: 0.5s;
  }
  .solution-item:nth-child(2) {
    animation-delay: 0.6s;
  }
  .solution-item:nth-child(3) {
    animation-delay: 0.7s;
  }
  .solution-item:nth-child(4) {
    animation-delay: 0.8s;
  }

  @keyframes fadeInItem {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* Animation des métriques */
  .metric-item {
    animation: bounceInMetric 0.8s ease-out;
    animation-fill-mode: both;
  }

  .metric-item:nth-child(1) {
    animation-delay: 0.2s;
  }
  .metric-item:nth-child(2) {
    animation-delay: 0.4s;
  }
  .metric-item:nth-child(3) {
    animation-delay: 0.6s;
  }
  .metric-item:nth-child(4) {
    animation-delay: 0.8s;
  }

  @keyframes bounceInMetric {
    0% {
      opacity: 0;
      transform: scale(0.3);
    }
    50% {
      opacity: 1;
      transform: scale(1.05);
    }
    70% {
      transform: scale(0.9);
    }
    100% {
      opacity: 1;
      transform: scale(1);
    }
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .transform-arrow {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .before-card,
