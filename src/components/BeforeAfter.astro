    }

    .problem-item,
    .solution-item {
      padding: 1rem;
    }

    .transform-element {
      display: none;
    }

    .metric-item {
      margin-bottom: 2rem;
    }
  }

  /* Animation au scroll */
  @media (prefers-reduced-motion: no-preference) {
    .before-card,
    .after-card {
      opacity: 0;
    }
  }
</style>

<script>
  function bookMeeting() {
    window.location.href = 'https://calendly.com/olivierdemontant/30min';
  }

  // Animation au scroll pour les éléments
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px',
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.style.animationPlayState = 'running';
        entry.target.style.opacity = '1';
      }
    });
  }, observerOptions);

  // Initialiser les observers au chargement
  document.addEventListener('DOMContentLoaded', () => {
    const animatedElements = document.querySelectorAll(
      '.before-card, .after-card, .problem-item, .solution-item, .metric-item'
    );

    animatedElements.forEach((el) => {
      observer.observe(el);
    });

    // Animation du compteur pour les métriques
    const counterElements = document.querySelectorAll('.metric-item .text-3xl');

    const animateCounter = (element, target) => {
      const isPercentage = target.includes('%');
      const isTime = target.includes('h');
      const numericTarget = parseInt(target.replace(/[^0-9]/g, ''));

      let current = 0;
      const increment = numericTarget / 50; // 50 étapes d'animation

      const timer = setInterval(() => {
        current += increment;
        if (current >= numericTarget) {
          current = numericTarget;
          clearInterval(timer);
        }

        let displayValue = Math.floor(current);
        if (isPercentage) displayValue += '%';
        if (isTime) displayValue += 'h';
        if (target === '100%') displayValue = Math.floor(current) + '%';
        if (target.includes('-'))
          displayValue = Math.floor(current) + '-' + (Math.floor(current) + 1) + 'h';

        element.textContent = displayValue;
      }, 20);
    };

    // Observer pour les métriques avec animation de compteur
    const metricsObserver = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting && !entry.target.dataset.animated) {
            const counterEl = entry.target.querySelector('.text-3xl');
            const targetValue = counterEl.textContent;
            entry.target.dataset.animated = 'true';

            setTimeout(() => {
              animateCounter(counterEl, targetValue);
            }, 500);
          }
        });
      },
      { threshold: 0.5 }
    );

    document.querySelectorAll('.metric-item').forEach((el) => {
      metricsObserver.observe(el);
    });
  });
</script>
