interface Props {
    title?: string;
    subtitle?: string;
    plans: {
        name: string;
        price: number;
        description: string;
        features: string[];
        popular?: boolean;
        buttonText: string;
        buttonAction: string;
    }[];
    guarantee?: {
        text: string;
        icon?: string;
    };
}

const {
    title = "Choisissez votre formule",
