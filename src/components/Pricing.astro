                        <div class={plan.popular ? 'text-zest-100' : 'text-gray-600'}>
                            {plan.description}
                        </div>
                    </div>
                    
                    <ul class="space-y-4 mb-8">
                        {plan.features.map((feature) => (
                            <li class="flex items-center space-x-3">
                                <div class={`w-5 h-5 ${plan.popular ? 'bg-white/20' : 'bg-green-100'} rounded-full flex items-center justify-center`}>
                                    <span class={`${plan.popular ? 'text-white' : 'text-green-600'} text-xs font-bold`}>‚úì</span>
                                </div>
                                <span>{feature}</span>
                            </li>
                        ))}
                    </ul>
                    
                    <button 
                        onclick={`selectPlan('${plan.buttonAction}')`}
                        class={`w-full ${plan.popular ? 'bg-white text-zest-500 hover:bg-gray-100' : 'bg-gray-100 text-gray-900 hover:bg-gray-200'} py-3 rounded-lg font-semibold transition-colors`}
                    >
                        {plan.buttonText}
                    </button>
                </div>
            ))}
        </div>

        {guarantee && (
            <div class="text-center mt-16">
                <div class="inline-flex items-center space-x-2 bg-green-50 px-6 py-3 rounded-full">
                    {guarantee.icon && <span class="text-green-600 font-bold">{guarantee.icon}</span>}
                    <span class="text-green-800 font-semibold">{guarantee.text}</span>
                </div>
            </div>
        )}
    </div>
</section>

